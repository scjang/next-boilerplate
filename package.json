{
  "name": "next-boilerplate",
  "version": "1.0.0",
  "author": "Seoulstore Front-End part",
  "scripts": {
    "postinstall": "simple-git-hooks",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register --project tsconfig.server.json src/server/index.ts",
    "build:server": "tsc --project tsconfig.server.json && tscpaths -p tsconfig.server.json -s ./src -o ./dist",
    "build:next": "next build",
    "build": "npm run build:next && npm run build:server",
    "start": "NODE_ENV=production node dist/server/index.js",
    "type-check": "tsc",
    "prettier": "prettier --write --config ./.prettierrc \"**/*.{ts,tsx}\"",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix './src/**/*.{ts,tsx}'",
    "prepend": "npm config set scripts-prepend-node-path true",
    "lint-staged": "lint-staged"
  },
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@mdx-js/react": "^1.6.22",
    "@next/bundle-analyzer": "^12.1.0",
    "@svgr/webpack": "^6.2.1",
    "@theme-ui/css": "^0.13.1",
    "@theme-ui/match-media": "^0.13.1",
    "axios": "^0.20.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "emotion-reset": "^3.0.1",
    "express": "^4.17.1",
    "next": "12",
    "next-transpile-modules": "^4.1.0",
    "nodemon": "^2.0.6",
    "nookies": "^2.5.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-query": "^3.34.15",
    "styled-components": "^5.2.1",
    "theme-ui": "^0.13.1",
    "tscpaths": "^0.0.9",
    "webpack-merge-and-include-globally": "^2.1.26"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/node": "^14.11.5",
    "@types/react": "^16.9.51",
    "@types/webpack": "^4.41.24",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "eslint": "^7.12.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "lint-staged": "^12.3.4",
    "prettier": "^2.1.2",
    "simple-git-hooks": "^2.7.0",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.3"
  },
  "resolutions": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2"
  },
  "lint-staged": {
    "./src/**/*.{ts,tsx}": "eslint --fix"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint-staged"
  }
}
